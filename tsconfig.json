{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictPropertyInitialization": false,

    "moduleResolution": "node",
    "lib": ["dom", "esnext"],

    "typeRoots": [
      "node_modules/@types",
      "typings/"
    ] 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
